{
  "name": "px2remvw",
  "publisher": "qianlifeng",
	"displayName": "px2remvw",
  "version": "0.0.10",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "description": "把px转成rem 或vw，并且能显示rem、vw对应的px值",
  "keywords": [
    "rem",
    "vw",
    "px vw",
    "px rem",
    "px to rem",
    "px to vw",
    "px2vw",
    "px2rem"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qianlfeg1st/px2remvw_vscode_extension.git"
  },
	"engines": {
		"vscode": "^1.30.0"
  },
  "icon": "icon.png",
	"categories": [
		"Other"
	],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:stylus",
    "onLanguage:tpl"
  ],
	"main": "./out/extension.js",
	"contributes": {
    "configuration": {
      "type": "object",
      "title": "config",
      "properties": {
        "config.fixedDigits": {
          "type": "number",
          "default": 4,
          "description": "保留几位小数"
        },
        "config.baseWidth": {
          "type": "number",
          "default": 750,
          "description": "设计稿宽度"
        },
        "config.cursor": {
          "type": "string",
          "default": "wait",
          "description": "指针样式"
        },
        "config.vwColor": {
          "type": "string",
          "default": "#f00",
          "description": "vw的字体颜色"
        },
        "config.remColor": {
          "type": "string",
          "default": "#f00",
          "description": "rem的字体颜色"
        }
      }
    }
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
